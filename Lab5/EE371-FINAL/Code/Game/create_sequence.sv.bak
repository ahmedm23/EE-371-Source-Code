module create_sequence(clk, reset, data, pressed, didDie);
	input logic clk, reset;
	input logic [1:0] data;
	input logic [3:0] pressed;
	output logic didDie;

	logic        [2:0] ps, ns;
	
	parameter
	red    = 2'b00, 
	green  = 2'b01, 
	blue   = 2'b10, 
	yellow = 2'b11;
	
	always_comb
		case(data)
			red:        
			green:    
			blue:     
			yellow:  
			default:	
		endcase
	
	
	always_ff @ (posedge clk)
		if (reset)
			ps <= scanning;
		else
			ps <= ns;

	

endmodule
